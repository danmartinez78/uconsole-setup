#!/usr/bin/env bash
set -e
WS="1"
i3-msg "workspace $WS; append_layout /dev/null" >/dev/null
i3-msg 'exec kitty -T DASH_TL -e bash -lc "cool-login"' >/dev/null
sleep 0.3
i3-msg 'split h; exec kitty -T DASH_TR -e bash -lc "(neofetch || true); echo; exec bash"' >/dev/null
sleep 0.3
i3-msg 'focus left; split v; exec kitty -T DASH_BL -e bash -lc "(pipes.sh -t 1 -p 1 || pipes.sh || true); exec bash"' >/dev/null
sleep 0.3
i3-msg 'focus right; split v; exec kitty -T DASH_BR -e bash -lc "htop || exec bash"' >/dev/null
sleep 0.3
i3-msg 'focus parent; focus left; resize set width 50 ppt; focus right; resize set width 50 ppt' >/dev/null
i3-msg 'focus parent; focus left; focus child; focus down; resize set height 50 ppt' >/dev/null
i3-msg 'focus parent; focus right; focus child; focus down; resize set height 50 ppt' >/dev/null
